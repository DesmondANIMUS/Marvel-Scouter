<Application
    x:Class="Marvel_Scouter.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Marvel_Scouter"
    RequestedTheme="Light">

    <Application.Resources>
        <Style TargetType="AutoSuggestBox" x:Key="suggestStyle">
            <Setter Property="Width" Value="230" />
            <Setter Property="Grid.Column" Value="1" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="PlaceholderText"  Value="What's in the List?" />
            <Setter Property="QueryIcon" Value="Filter" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
    </Application.Resources>

</Application>
